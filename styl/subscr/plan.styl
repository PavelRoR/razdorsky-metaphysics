#plan
    padding 35px 0 88px
    background-image: radial-gradient( 50% 50%, circle closest-side, rgb(53,53,53) 15%, rgb(42,41,41) 52%, rgb(12,12,12) 100%);
.plan_day
    padding 28px 0
    overflow hidden
.plan_day_one
    position relative
    &:before
        content ''
        display: block
        position: absolute
        width 100%
        height 100%
        top 0
        left 0
        right 0
        bottom 0
        opacity .3
        background-image url(../img/day_1_layout.png)
        background-position: center
        background-repeat no-repeat
        background-size cover
    .plan_day_img
        position relative
        left -60px
.plan_day_title
    margin: 60px 0  40px
    font-size: 30px;
    font-family: "AkrobatBlack", sans-serif
    color: rgb(61, 116, 218);
    text-transform: uppercase;
    line-height: 1
    span
        color #fff
.plan_day_list
    li
        list-style none
        padding-left: 30px
        background-image url(../img/triangle.png)
        background-repeat no-repeat
        background-position 0 7px
        font-size: 18px;
        color: rgb(255, 255, 255);
        line-height: 1.444;
        margin-bottom: 10px
.bonus
    display: table
    margin-bottom: 56px
.bonus_title
    display: table-cell
    font-size: 24px;
    font-family: "AkrobatBlack", sans-serif
    color: rgb(61, 116, 218);
    text-transform: uppercase;
    line-height: 1.083;
    text-shadow: 0 0 21px rgba(#def7fd, .5)
.bonus_text
    display: table-cell
    font-family: "Open Sans";
    color: rgb(255, 255, 255);
    line-height: 1.444;
    padding-left: 7px
