#reveiws
    padding 30px 0 95px
    background-color: rgb(12,12,12)
    background-image url(../img/revs_bg.png)
    background-repeat no-repeat
    background-position: center bottom
    background-size: cover
#video_revs
    width 100%
    max-width 945px
    margin 0 auto
.video_wrapper_rev
    iframe
    img
        z-index 30
#text_revs
    margin 60px auto 116px
    width 100%
.text_revs_link
    display flex
    align-items: center
    justify-content: center
    margin 0 auto
    width 100%
    max-width 740px
    background-color #fff
    min-height 373px
    img
        margin 0 auto
        display block
.text_revs_indicators
    position: static
    margin 10px auto 0
    li
        border-color: #a90c04
        border-radius: 0
    .active
        background-color: #a90c04
.text_controls
    height 0
    // overflow hidden
    width 100%
    max-width 936px
    margin 0 auto
    position: absolute
    top: 40%
    left 0
    right 0
    .carousel-control
        background-color: rgb(169, 12, 4);
        width: 50px;
        height: 50px;
        background-image: none
        opacity 1
        line-height: 50px
        font-size: 20px
        position: static
        float: left
        display block
        &.right
            float: right
.right_now
    font-size: 32px;
    font-family: "AkrobatBold", sans-serif
    color: rgb(61, 116, 218);
    text-transform: uppercase;
    line-height: 1
    text-align: center;
    &+p
        font-size: 18px;
        color: rgb(255, 255, 255);
        line-height: 1.2;
        text-align: center;
        margin 35px 0 57px