#footer
	padding: 35px 0 33px
	text-align: center
	h5
		font-size: 24px;
		color: rgb(255, 252, 252);
		line-height: 1.042;
		margin 0
		font-family: 'AcrobatBold', sans-serif
	p
	#conditions
		font-size: 14px;
		color: rgba(254, 254, 254, .6);
		line-height: 1.786;
	#conditions
		margin 15px 0 0
		text-decoration: underline
.soc_buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 20px 13px
		position relative
		z-index: 1
		&:before
			content: ''
			display block
			position: absolute
			top: 0
			left 0
			right 0
			margin 0 auto
			width: 32px;
			height 32px
			transform: rotate(45deg)
			background-color: #a90c04
			border-radius: 3px
			z-index 4
		.fa
			width: 32px;
			height: 32px;
			color #fff
			font-size 18px
			line-height 32px
			position relative
			z-index 9
#myPolitics
	.modal-title
		text-align: center
		font-size: 22px
		font-family: "OpenSansSemibold", sans-serif
		small
			display block
			margin-top: 0
	.modal-body
		p
			font-size: 16px;
			text-align: left
			margin-bottom: 20px
.modal-header
	position relative
button.close
	position: absolute
	top 20px
	right 20px
	border-radius: 50%
	height 30px
	width: 30px
	line-height: 30px
	font-size: 18px
	padding 0
	margin 0
	z-index 99
#myModalForm
	.modal-content
		background-color #B8AC82
		background-image url(../img/for_bg.png)
		background-repeat: repeat
		background-position: center
#modalForm
	text-align: center
	h4
		font-size: 24px;
		color: rgba(26,20,13,0.902);
		margin: 20px 0
		letter-spacing: -0.5px;
	.form_bonus
		font-size: 18px;
		font-family: "OpenSansLightItalic", sans-serif;
		color: #301b0c;
	input
		margin: 20px auto
.modal_soc_buttons {
	margin-top: 30px
}

.modal_soc_button {
	width: 100%;
	height: 46px;
	line-height: 46px;
	border-radius: 3px;
	color: #fff;
	display: block;
	text-align: center;
	padding: 0 5px;
	font-size: 14px;
	margin: 0 auto;
	max-width: 170px
}

.modal_soc_button:focus,
.modal_soc_button:hover {
	color: #fff;
	text-decoration: none;
}

.modal_soc_button svg {
	fill: #fff;
	width: 30px;
	height: 30px;
	vertical-align: middle;
}

.soc_button_vk {
	background-color: #31648B
}

.soc_button_tg {
	background-color: #00B1EB
}

.soc_button_ms {
	background-color: #008CFF
}