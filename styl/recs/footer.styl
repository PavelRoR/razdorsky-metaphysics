#footer
	padding: 35px 0 33px
	background-color: #181818
	text-align: center
	h5
		font-size: 24px;
		color: rgb(255, 252, 252);
		line-height: 1.042;
		margin 0
		font-family: 'AcrobatBold', sans-serif
	p
	#conditions
		font-size: 14px;
		color: rgba(254, 254, 254, .6);
		line-height: 1.786;
	#conditions
		margin 15px 0 0
		text-decoration: underline
.soc_buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 20px 13px
		position relative
		z-index: 1
		&:before
			content: ''
			display block
			position: absolute
			top: 0
			left 0
			right 0
			margin 0 auto
			width: 32px;
			height 32px
			transform: rotate(45deg)
			background-color: #a90c04
			border-radius: 3px
			z-index 4
		.fa
			width: 32px;
			height: 32px;
			color #fff
			font-size 18px
			line-height 32px
			position relative
			z-index 9
.modal-backdrop.in
	opacity .94
.prices_modal-dialog
	width 100%
	max-width 800px
.prices_modal-content
	background-color #0C0C0C
	color #fff
	box-shadow: 0 0 13px rgba(#fff, .3)
	border: 1px solid rgba(#fff,.3)
.modal_title
	font-size: 28px
	font-family: 'AkrobatBlack', sans-serif
	margin-bottom: 20px
.modal_subtitle
	font-size: 24px
	font-family: 'AkrobatBold', sans-serif
	margin-bottom: 20px
	color #3d74da
.modal_body_list
	margin-bottom: 40px
	margin-left: 30px
	li
		font-family: 'OpenSansRegular', sans-serif
		font-size: 18px
		margin-bottom: 10px
button.close
	font-family: 'AkrobatBlack', sans-serif
	width: 30px
	height 30px
	font-size: 38px
	color: #fff
	position: absolute
	top 15px
	right 15px
	opacity 1
	padding 0
	z-index 99
	font-weight: normal
	line-height: 0
	&:focus
	&:hover
		opacity 1