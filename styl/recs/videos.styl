#videos
    padding 0 0 60px
    background-color: rgb(12,12,12)
    background-image url(../img/revs_bg.png)
    background-repeat no-repeat
    background-position: center bottom
    background-size: cover
.video_tabs
    width 100%
    max-width 560px
    margin 0 auto 25px
.video_tabs_buttons
    text-align: center
    margin-bottom: 25px
    li
        background-color: rgba(#0075DE, .5)
        text-align: center
        display inline-block
        padding 10px 20px
        color: #fff
        font-family: 'OpenSansBold', sans-serif
        cursor: pointer
        &:nth-child(2)
            margin 0 10px
        &:hover
        &.active
            background-color: #0075DE
.video_container
    background-color #fff
    padding: 20px
.video_tabs_day_title
    font-size: 20px;
    font-family: 'OpenSansSemibold', sans-serif
    text-align: center
    margin-bottom: 10px
.day_video_wrapper
    margin-bottom: 20px
.video_tabs_day_text
    font-size: 18px
    font-family: 'OpenSansRegular',sans-serif
    margin-bottom: 10px
    &:last-child
        margin-bottom: 0
.buy_recs
    font-family: 'AkrobatBold', sans-serif
    font-size: 24px
    text-align: center
    color #fff